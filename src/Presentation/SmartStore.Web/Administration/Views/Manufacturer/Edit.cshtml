@model ManufacturerModel
@{
    ViewBag.Title = T("Admin.Catalog.Manufacturers.EditManufacturerDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "manufacturer-form" }))
{
    <div class="section-header">
        <div class="title">
            @T("Admin.Catalog.Manufacturers.EditManufacturerDetails") - @Model.Name 
			<a href='@Url.Action("List")'>(@T("Admin.Catalog.Manufacturers.BackToList"))</a>
        </div>
        <div class="options">
			@Html.Widget("admin_button_toolbar_before")

            <button type="button" onclick="OpenWindow('@Url.RouteUrl("Manufacturer", new { SeName = Model.SeName })', 800, 600, true); return false;" class="btn">
				<i class="fa fa-eye"></i>
				@T("Admin.Common.Preview")
            </button>
            <button type="submit" name="save" value="save" class="btn btn-primary">
                <i class="fa fa-check"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save" value="save-continue" class="btn">
                @T("Admin.Common.SaveContinue")
            </button>
            <button type="submit" name="manufacturer-delete" id="manufacturer-delete" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </button>

			@Html.Widget("admin_button_toolbar_after")
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("manufacturer-delete")