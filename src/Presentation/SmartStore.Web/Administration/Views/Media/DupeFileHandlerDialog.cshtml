<div id="duplicate-window" class="modal fade" role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="duplicate-window" data-keyboard="false" data-show="true" data-focus="true" data-backdrop="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content p-2">
			<div class="modal-body pb-0">
				@DialogBody()
			</div>
			<div class="modal-footer">
				@Footer()
			</div>
		</div>
	</div>
</div>

@helper FileInfo()
{
	<div class="file-display">
		<div class="row no-gutters">
			<div class="col-auto">
				<img src="" class="file-img img-fluid" />
			</div>
			<div class="col file-info p-1 pl-3">
				<div class="file-name text-truncate"></div>
				<div class="text-muted fs-sm mt-1">
					<div>
						<span class="file-dimensions"></span>
						<span class="file-size font-weight-bold"></span>
					</div>
					<div class="file-date"></div>
				</div>
			</div>
		</div>
	</div>
}

@helper DialogBody()
{
	<h5 class="modal-title mb-3" id="duplicate-windowLabel">@T("FileUploader.DuplicateDialog.Title")</h5>

	<p class="intro">
		@T("FileUploader.DuplicateDialog.Intro")
	</p>

	<div class="container p-0">
		<div class="row no-gutters mb-3 dupe-media-comparison">
			<div class="col-6 pr-3 dupe-file-display">
				<h6>@T("FileUploader.DuplicateDialog.DupeFile.Title")</h6>
				@FileInfo()
			</div>
			<div class="col-6 existing-file-display">
				<h6>@T("FileUploader.DuplicateDialog.ExistingFile.Title")</h6>
				@FileInfo()
			</div>
		</div>
	</div>

	<div class="form-check mt-3">
		<input class="form-check-input" id="replace" name="dupe-handling-type" type="radio" value="1" checked="checked">
		<label for="replace" class="form-check-label">@T("FileUploader.DuplicateDialog.Option.Replace")</label>
	</div>
	<div class="form-check mt-1">
		<input class="form-check-input" id="rename" name="dupe-handling-type" type="radio" value="2">
		<label for="rename" class="form-check-label">@T("FileUploader.DuplicateDialog.Option.Rename")</label>
	</div>
	<div class="form-check mt-1">
		<input class="form-check-input" id="skip" name="dupe-handling-type" type="radio" value="0">
		<label for="skip" class="form-check-label">@T("FileUploader.DuplicateDialog.Option.Skip")</label>
	</div>
	<hr class="mb-0" />
}

@helper Footer()
{
	<div class="col pl-0">
		<div class="form-check">
			<input class="form-check-input" id="save-selection" name="save-selection" type="checkbox" />
			<label for="save-selection" class="form-check-label">@T("FileUploader.DuplicateDialog.Option.SaveSelection")</label>
		</div>
	</div>
	<div class="col-auto pr-0">
		<div class="text-right">
			<a href="#" id="cancel-upload" name="cancel-upload" class="btn btn-secondary">
				@T("Common.Cancel")
			</a>
			<a href="#" id="start-upload" name="start-upload" class="btn btn-primary">
				@T("Common.Apply")
			</a>
		</div>
	</div>
}
