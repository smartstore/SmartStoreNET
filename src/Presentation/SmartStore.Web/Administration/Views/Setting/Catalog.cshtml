            }
        }

        function toggleSearchPageSize() {
            if ($('#@Html.FieldIdFor(model => model.ProductSearchAllowCustomersToSelectPageSize)').is(':checked')) {
                $('#pnlSearchPageSizeOptions').show();
            } else {
