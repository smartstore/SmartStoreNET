            }
        }

        function toggleTagPageSize() {
            if ($('#@Html.FieldIdFor(model => model.ProductsByTagAllowCustomersToSelectPageSize)').is(':checked')) {
                $('#pnlTagPageSizeOptions').show();
            } else {
