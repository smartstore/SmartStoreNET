            }
        }
        
        function toggleCompareProducts() {
            if ($('#@Html.FieldIdFor(model => model.CompareProductsEnabled)').is(':checked')) {
                $('#pnlIncludeShortDescriptionInCompareProducts').show();
                $('#pnlIncludeFullDescriptionInCompareProducts').show();
            } else {
