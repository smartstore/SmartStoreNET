        @ThemeVarEditor("gray-lighter")
        @ThemeVarEditor("gray-lightest")

        @ThemeVarEditor("red", "Colors")
        @ThemeVarEditor("orange")
        @ThemeVarEditor("yellow")
        @ThemeVarEditor("green")
        @ThemeVarEditor("blue")
        @ThemeVarEditor("bluegrey")
        @ThemeVarEditor("indigo")
        @ThemeVarEditor("teal")
        @ThemeVarEditor("pink")
        @ThemeVarEditor("purple")

        @ThemeVarEditor("brand-primary", "Brand Colors")
        @ThemeVarEditor("brand-warning")
        @ThemeVarEditor("brand-danger")
        @ThemeVarEditor("brand-info")
        @ThemeVarEditor("brand-success")

        @ThemeVarEditor("boxed", "Layout", T("Admin.ThemeVar.Boxed"))

        @ThemeVarEditor("body-bg", "Site Colors")
        @ThemeVarEditor("site-bg")
