@helper ThemeVarEditor(string varName, string groupName = null, string helpText = null)
{
    if (groupName != null)
    {
        <tr>
            <td colspan="2" class="admin-config-group">
                <div class="title">@groupName</div>
            </td>
        </tr>
    }
    <tr>
        <td class="adminTitle">
            <div class="ctl-label">
                @if (helpText != null)
                {
                    <a class="hint" href="#" onclick="return false;" tabindex="-1" data-original-title="@helpText"><i class="fa fa-question-circle"></i></a>
                }
                @Html.ThemeVarLabel(ThemeManifest.Variables[varName])
            </div>
        </td>
        <td class="adminData">
            @Html.ThemeVarEditor(ThemeManifest.Variables[varName], Model[varName])
        </td>
    </tr>
}
