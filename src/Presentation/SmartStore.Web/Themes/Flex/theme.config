<?xml version="1.0" encoding="utf-8" ?>
<Theme title="Flex" previewText="'Flex' default theme" author="SmartStore AG" version="1.0">

  <Vars>
    <!-- Common colors -->
    <Var name="gray-dark" type="Color">#292b2c</Var>
    <Var name="gray" type="Color">#464a4c</Var>
    <Var name="gray-light" type="Color">#999</Var>
    <Var name="gray-lighter" type="Color">#eceeef</Var>
    <Var name="gray-lightest" type="Color">#f7f7f9</Var>

    <Var name="red" type="Color">#f44336</Var>
    <Var name="orange" type="Color">#ff9800</Var>
    <Var name="yellow" type="Color">#ffeb3b</Var>
    <Var name="green" type="Color">#4caf50</Var>
    <Var name="blue" type="Color">#0275d8</Var>
    <Var name="bluegrey" type="Color">#78909c</Var>
    <Var name="indigo" type="Color">#3f51b5</Var>
    <Var name="teal" type="Color">#009688</Var>
    <Var name="pink" type="Color">#ff5b77</Var>
    <Var name="purple" type="Color">#9c27b0</Var>

    <!-- Brand Colors -->
    <Var name="brand-primary" type="Color">$indigo</Var>
    <Var name="brand-warning" type="Color">$orange</Var>
    <Var name="brand-danger" type="Color">$red</Var>
    <Var name="brand-info" type="Color">$bluegrey</Var>
    <Var name="brand-success" type="Color">$green</Var>
    <Var name="brand-inverse" type="Color">$gray-dark</Var>
    
    <!-- Common variables -->
    <Var name="border-radius" type="String">0.25rem</Var>
    <Var name="border-radius-lg" type="String">0.3rem</Var>
    <Var name="border-radius-sm" type="String">0.2rem</Var>
    
    <!-- Layout -->
    <Var name="boxed" type="Boolean">false</Var>
    
    <!-- Main site colors -->
    <Var name="site-bg" type="Color">$gray-lightest</Var>
    <Var name="body-bg" type="Color">#fff</Var>
    <Var name="body-color" type="Color">#333</Var>
    <Var name="text-muted" type="Color">#999</Var>
    <Var name="link-color" type="Color">#0066c0</Var>
    
    <!-- Footer -->
    <Var name="inverse-footer" type="Boolean">false</Var>
    <Var name="footer-bg" type="Color">$gray-lightest</Var>
    <Var name="footer-color" type="Color">$body-color</Var>
    <Var name="footer-color-muted" type="Color">$text-muted</Var>
    <Var name="footer-inverse-color" type="Color">#fff</Var>
    <Var name="footer-inverse-color-muted" type="Color">rgba(#fff, 0.5)</Var>
    <Var name="footer-social-bg" type="Color">#aaa</Var>
    <Var name="footer-social-color" type="Color">#fff</Var>
    
    <!-- Buttons -->
    <Var name="btn-primary-color" type="Color">#fff</Var>
    <Var name="btn-primary-bg" type="Color">$brand-primary</Var>
    <Var name="btn-primary-border" type="Color">$btn-primary-bg</Var>
    <Var name="btn-secondary-color" type="Color">$gray-dark</Var>
    <Var name="btn-secondary-bg" type="Color">#fff</Var>
    <Var name="btn-secondary-border" type="Color">#ddd</Var>
    <Var name="btn-info-color" type="Color">#fff</Var>
    <Var name="btn-info-bg" type="Color">$brand-info</Var>
    <Var name="btn-info-border" type="Color">$btn-info-bg</Var>
    <Var name="btn-success-color" type="Color">#fff</Var>
    <Var name="btn-success-bg" type="Color">$brand-success</Var>
    <Var name="btn-success-border" type="Color">$btn-success-bg</Var>
    <Var name="btn-warning-color" type="Color">#fff</Var>
    <Var name="btn-warning-bg" type="Color">$brand-warning</Var>
    <Var name="btn-warning-border" type="Color">$btn-warning-bg</Var>
    <Var name="btn-danger-color" type="Color">#fff</Var>
    <Var name="btn-danger-bg" type="Color">$brand-danger</Var>
    <Var name="btn-danger-border" type="Color">$btn-danger-bg</Var>
    
    <!-- Common Font -->
    <!-- e.g.: Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic -->
    <Var name="google-font-1" type="String"></Var>
    <Var name="google-font-2" type="String"></Var>
    <Var name="google-font-3" type="String"></Var>
    
    <Var name="font-family-sans-serif" type="String">-apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif</Var>
    <Var name="font-family-monospace" type="String">Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace</Var>
    <Var name="font-size-base" type="String">0.875rem</Var>
    <Var name="font-size-lg" type="String">1rem</Var>
    <Var name="font-size-sm" type="String">0.8125rem</Var>
    <Var name="font-size-xs" type="String">0.75rem</Var>

    <Var name="font-weight-light" type="String">300</Var>
    <Var name="font-weight-normal" type="String">normal</Var>
    <Var name="font-weight-medium" type="String">600</Var>
    <Var name="font-weight-bold" type="String">bold</Var>

    <!-- Headings -->
    <Var name="headings-font-family" type="String">inherit</Var>
    <Var name="headings-font-weight" type="String">600</Var>
    <Var name="headings-line-height" type="String">1.2</Var>
    <Var name="headings-color" type="String">inherit</Var>
    <Var name="lead-font-weight" type="String">300</Var>

    <!-- h1-h6 -->
    <Var name="font-size-h1" type="String">2.5rem</Var>
    <Var name="font-size-h2" type="String">2rem</Var>
    <Var name="font-size-h3" type="String">1.75rem</Var>
    <Var name="font-size-h4" type="String">1.25rem</Var>
    <Var name="font-size-h5" type="String">1rem</Var>
    <Var name="font-size-h6" type="String">$font-size-base</Var>

    <!-- Header -->
    <Var name="header-bg" type="Color">transparent</Var>
    <Var name="inverse-menubar" type="Boolean">false</Var>
    <Var name="inverse-shopbar" type="Boolean">false</Var>
    <Var name="inverse-navbar" type="Boolean">false</Var>
    <Var name="menubar-bg" type="Color">transparent</Var>
    <Var name="shopbar-bg" type="Color">transparent</Var>
    <Var name="megamenu-bg" type="Color">$gray-lightest</Var>

    <Var name="menubar-color" type="Color">$body-color</Var>            
    <Var name="shopbar-color" type="Color">$body-color</Var>
    <Var name="megamenu-color" type="Color">$body-color</Var>
    <Var name="menubar-inverse-color" type="Color">#fff</Var>
    <Var name="shopbar-inverse-color" type="Color">#fff</Var>
    <Var name="megamenu-inverse-color" type="Color">#fff</Var>
    <Var name="megamenu-line-height" type="String">1.8</Var>

    <!-- Megamenu Dropdowns -->
    <Var name="megamenu-dropdown-bg" type="Color">#fff</Var>
    <Var name="megamenu-heading-color" type="Color">#222</Var>
    <Var name="megamenu-subitem-color" type="Color">#999</Var>
    <Var name="megamenu-text-color" type="Color">$body-color</Var>
    <Var name="megamenu-rotator-bg" type="Color">rgba(255, 255, 255, 0.92)</Var>

    <!-- Search -->
    <Var name="searchbox-bg" type="Color">#fff</Var>
    <Var name="searchbox-focus-bg" type="Color">#fff</Var>
    <Var name="searchbox-border-color" type="Color">rgba(0,0,0, 0.12)</Var>
    <Var name="searchbox-border-active-color" type="Color">rgba(0,0,0, 0.2)</Var>
    <Var name="search-button-style" type="Select#brand-colors">primary</Var>
    <Var name="search-button-flat" type="Boolean">false</Var>
    <Var name="searchbox-hit-tag-color" type="Color">darken($brand-warning, 10%)</Var>    

    <!-- States -->
    <Var name="state-success-text" type="Color">#3c763d</Var>
    <Var name="state-success-bg" type="Color">#dff0d8</Var>
    <Var name="state-success-border" type="Color">darken($state-success-bg, 5%)</Var>
    <Var name="state-info-text" type="Color">#31708f</Var>
    <Var name="state-info-bg" type="Color">#d9edf7</Var>
    <Var name="state-info-border" type="Color">darken($state-info-bg, 5%)</Var>
    <Var name="state-warning-text" type="Color">#8a6d3b</Var> 
    <Var name="state-warning-bg" type="Color">#fcf8e3</Var>
    <Var name="state-warning-border" type="Color">darken($state-warning-bg, 5%)</Var>
    <Var name="state-danger-text" type="Color">#a94442</Var>
    <Var name="state-danger-bg" type="Color">#f2dede</Var>
    <Var name="state-danger-border" type="Color">darken($state-danger-bg, 5%)</Var>

    <!-- Cards -->
    <Var name="card-border-radius" type="String">$border-radius</Var>
    <Var name="card-border-color" type="Color">rgba(#000,.125)</Var>
    <Var name="card-cap-bg" type="Color">$gray-lightest</Var>
    <Var name="card-bg" type="Color">#fff</Var>
    <Var name="card-link-hover-color" type="Color">#fff</Var>

    <!-- Dropdowns -->
    <Var name="dropdown-bg" type="Color">#fff</Var>
    <Var name="dropdown-border-color" type="Color">rgba(#000, .075)</Var>
    <Var name="dropdown-divider-bg" type="Color">$gray-lighter</Var>
    <Var name="dropdown-box-shadow" type="String">0 .5rem 1rem rgba(#000, .175)</Var>
    <Var name="dropdown-link-color" type="Color">$gray-dark</Var>
    <Var name="dropdown-link-hover-color" type="Color">darken($gray-dark, 5%)</Var>
    <Var name="dropdown-link-hover-bg" type="Color">$gray-lightest</Var>

    <!-- Tables-->
    <Var name="table-bg" type="Color">transparent</Var>
    <Var name="table-bg-accent" type="Color">rgba(#000, .05)</Var>
    <Var name="table-bg-hover" type="Color">rgba(#000, .075)</Var>
    <Var name="table-bg-active" type="Color">$table-bg-hover</Var>
    <Var name="table-border-color" type="Color">$gray-lighter</Var>
    
    <!-- Misc  -->
    <Var name="shopbar-label" type="Select#brand-colors">warning</Var>
    <Var name="nav-tabs-active-link-color" type="Color">$gray</Var>
    <Var name="product-price-color" type="Color">$body-color</Var>
    <Var name="product-detail-addtocart-box-bg" type="Color">$gray-lightest</Var>
    <Var name="login-box-bg" type="Color">#fcfcfc</Var>
    <Var name="cart-footer-bg" type="Color">$gray-lightest</Var>
    <Var name="costep-progress-color" type="Color">$brand-warning</Var>
    <Var name="offcanvas-cart-footer" type="Color">$brand-success</Var>
    <Var name="art-active-bg-color" type="Color">#fff</Var>
    <Var name="art-active-border-color" type="Color">rgba(0,0,0, 0.2)</Var>
  </Vars>

  <Selects>
    <Select id="brand-colors">
      <Option>primary</Option>
      <Option>secondary</Option>
      <Option>info</Option>
      <Option>success</Option>
      <Option>warning</Option>
      <Option>danger</Option>
    </Select>
  </Selects>
</Theme>