@model SitemapModel
@using SmartStore.Web.Models.Catalog;
@using SmartStore.Web.Models.Common;
@using SmartStore.Web.Models.Topics;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Sitemap").Text);
}
<div class="page sitemap-page">
    <div class="page-title">
        <h1>@T("Sitemap")</h1>
    </div>
    <div class="page-body">
        @if (Model.Topics.Count > 0)
        {
            <div class="entity">
                @(Html.DataList<TopicModel>(Model.Topics, 4,
                @<div class="topic-box">
                    <div class="item">
                        <a href="@Url.RouteUrl("Topic", new { SystemName = @item.SystemName.ToLowerInvariant() })">@item.Title</a>
                    </div>
                </div>
            ))
            </div>
            <div class="clear">
            </div>
        }
        @if (Model.Categories.Count > 0)
        {
            <div class="entity">
                <h2>
                    @T("Sitemap.Categories")</h2>
                @(Html.DataList<CategoryModel>(Model.Categories, 4,
                @<div class="category-box">
                    <div class="item">
                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })">@item.Name</a>
                    </div>
                </div>
            ))
            </div>
            <div class="clear">
            </div>
        }
        @if (Model.Manufacturers.Count > 0)
        {
            <div class="entity">
                <h2>
                    @T("Sitemap.Manufacturers")</h2>
                @(Html.DataList<ManufacturerModel>(Model.Manufacturers, 4,
                @<div class="manufacturer-box">
                    <div class="item">
                        <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a>
                    </div>
                </div>
            ))
            </div>
            <div class="clear">
            </div>
        }
        @if (Model.Products.Count > 0)
        {
            <div class="entity">
                <h2>
                    @T("Sitemap.Products")</h2>
                @(Html.DataList<ProductOverviewModel>(Model.Products, 4,
                @<div class="product-box">
                    <div class="item">
                        <a href="@Url.RouteUrl("Product", new { SeName = item.SeName })">@item.Name</a>
                    </div>
                </div>
            ))
            </div>
        }
    </div>
</div>
