@model IList<ProductOverviewModel>
@using SmartStore.Web.Models.Catalog;
@if (Model.Count > 0)
{
	<div class="clear"></div>
	
    <div class="block product-grid cross-sells">
        <div class="block-title cross-sells-title">
            @T("ShoppingCart.CrossSells")
        </div>
        <div class="block-body">
            @(Html.DataList<ProductOverviewModel>(Model, 4,
                @<div class="item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            ))
        </div>
    </div>
}