@model TaxTypeSelectorModel
@using SmartStore.Web.Models.Common;
@using SmartStore.Core.Domain.Tax;
@if (Model.Enabled)
{
    <div class="tax-display-type-selector">
        <div class="title">
            @T("Tax.SelectType")
        </div>
        <ul data-role="listview" data-inset="true" data-filter="false">
            <li @(Model.CurrentTaxType == TaxDisplayType.IncludingTax ? " data-icon=false" : null)>
				<a href="@Url.RouteUrl("ChangeTaxType", new { customertaxtype = ((int)TaxDisplayType.IncludingTax).ToString() })" data-ajax="false" rel="nofollow">
					@T("Tax.Inclusive")
				</a></li>
            <li @(Model.CurrentTaxType == TaxDisplayType.ExcludingTax ? " data-icon=false" : null)>
				<a href="@Url.RouteUrl("ChangeTaxType", new { customertaxtype = ((int)TaxDisplayType.ExcludingTax).ToString() })" data-ajax="false" rel="nofollow">
					@T("Tax.Exclusive")
				</a></li>
        </ul>
    </div>
}