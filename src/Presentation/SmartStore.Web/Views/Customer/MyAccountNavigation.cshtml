@model CustomerNavigationModel           
@using SmartStore.Web.Models.Customer;
<div class="block block-bordered block-account-navigation card">
    <div class="block-title card-header">
        @T("Account.Navigation")
    </div>
    <div class="block-body listbox card-block">
        <ul class="level-1 list-unstyled">
            
            @{ Html.RenderWidget("account_navigation_before"); }

            @if(!Model.HideInfo)
            {
                <li>
                    <a href="@Url.Action("Info", "Customer")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.Info ? "active" : "inactive")">
                        @T("Account.CustomerInfo")
                    </a>
                </li>
            }
            @if (!Model.HideAddresses)
            {
                <li>
                    <a href="@Url.Action("Addresses", "Customer")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.Addresses ? "active" : "inactive")">
                        @T("Account.CustomerAddresses")
                    </a>
                </li>
			}
            @if (!Model.HideOrders)
			{ 
                <li>
                    <a href="@Url.Action("Orders", "Customer")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.Orders ? "active" : "inactive")">
                        @T("Account.CustomerOrders")
                    </a>
                </li>
			}
            @if (!Model.HideReturnRequests)
			{ 
                <li>
                    <a href="@Url.Action("ReturnRequests", "Customer")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.ReturnRequests ? "active" : "inactive")">
                        @T("Account.CustomerReturnRequests")
                    </a>
                </li>
			}
            @if (!Model.HideDownloadableProducts)
			{ 
                <li>
                    <a href="@Url.Action("DownloadableProducts", "Customer")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.DownloadableProducts ? "active" : "inactive")">
                        @T("Account.DownloadableProducts")
                    </a>
                </li>
            }
            @if (!Model.HideBackInStockSubscriptions)
            { 
                <li>
                    <a href="@Url.Action("BackInStockSubscriptions")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.BackInStockSubscriptions ? "active" : "inactive")">
                        @T("Account.BackInStockSubscriptions")
                    </a>
                </li>
            }
            @if (!Model.HideRewardPoints)
            { 
                <li>
                    <a href="@Url.Action("RewardPoints")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.RewardPoints ? "active" : "inactive")">
                        @T("Account.RewardPoints")
                    </a>
                </li>
            }
            @if (!Model.HideChangePassword)
            { 
                <li>
                    <a href="@Url.Action("ChangePassword")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.ChangePassword ? "active" : "inactive")">
                        @T("Account.ChangePassword")
                    </a>
                </li>
            }
            @if (!Model.HideAvatar)
            { 
                <li>
                    <a href="@Url.Action("Avatar")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.Avatar ? "active" : "inactive")">
                        @T("Account.Avatar")
                    </a>
                </li> 
            }
            @if (!Model.HideForumSubscriptions)
            { 
                <li>
                    <a href="@Url.Action("ForumSubscriptions")" rel="nofollow" class="@(Model.SelectedTab == CustomerNavigationEnum.ForumSubscriptions ? "active" : "inactive")">
                        @T("Account.ForumSubscriptions")
                    </a>
                </li>
            }

            @{ Html.RenderWidget("account_navigation_after"); }
        </ul>
    </div>
</div>
