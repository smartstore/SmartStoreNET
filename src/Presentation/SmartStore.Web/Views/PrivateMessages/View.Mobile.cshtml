@model PrivateMessageModel
@using SmartStore.Web.Models.PrivateMessages;
@{
    Layout = "~/Views/Shared/_Root.cshtml";

    Html.AddTitleParts(T("PageTitle.ViewPM").Text);
}
<div class="page private-message-view-page">
    <div class="page-title">
        <h1>@T("PrivateMessages.View.ViewMessage")</h1>
    </div>
    <div class="page-body">
        <div class="view-message">
            <div>
                @T("PrivateMessages.View.From") @Model.CustomerFromName
            </div>
            <div>
                @T("PrivateMessages.View.To") @Model.CustomerToName
            </div>
            <div class="subject-label">
                @T("PrivateMessages.View.Subject")
            </div>
            <div>
                @Model.Subject
            </div>
            <div class="message-label">
                @T("PrivateMessages.View.Message")
            </div>
            <div>
                @Html.Raw(@Model.Message)
            </div>
            <div>
                <div class="options">
					<a href="@Url.Action("Send", new { id = Model.FromCustomerId, replyToMessageId = Model.Id })" data-role="button" data-inline="true" rel="nofollow">@T("PrivateMessages.View.ReplyButton")</a>
					<a href="@Url.Action("Delete", new { id = Model.Id })" data-role="button" data-inline="true" rel="nofollow">@T("PrivateMessages.View.DeleteButton")</a>
					<a href="@Url.RouteUrl("PrivateMessages", new { tab = "inbox" })" data-role="button" data-inline="true" rel="nofollow">@T("PrivateMessages.View.BackButton")</a>
                </div>
            </div>
        </div>
    </div>
</div>
