@model IList<ProductSpecificationModel>

@using SmartStore.Web.Models.Catalog;

@{ 
	if (Model.Count == 0)
	{
		return;
	}
}

<div class="pd-specs table-responsive">
	<table class="table pd-specs-table">
		<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				var item = Model[i];
				<tr>
					<td class="pd-spec-name">@item.SpecificationAttributeName</td>
					<td class="pd-spec-value">@item.SpecificationAttributeOption</td>
				</tr>
			}
		</tbody>
	</table>
</div>